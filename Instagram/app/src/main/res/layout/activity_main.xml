<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context="io.com.instagram.activity.MainActivity"    >    <include        layout="@layout/toolbar"        android:id="@+id/toolbar_main"></include>    <android.support.v4.view.ViewPager        android:id="@+id/view_page_main"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:background="@color/colorPrimary"        />    <io.com.instagram.sched.SlidingTabLayout        android:id="@+id/slider_tab_main"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_gravity="bottom"        android:elevation="8dp"        android:background="@color/colorPrimary"        /></LinearLayout>